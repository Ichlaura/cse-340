    <h1>Add New Classification</h1>
    
    <!-- Mostrar mensajes flash -->
    <% if (messages && messages.message) { %>
      <div class="flash-message <%= messages.type %>">
        <%= messages.message %>
      </div>
    <% } %>

    <!-- Formulario -->
    <form action="/inv/add-classification" method="POST" id="classificationForm">
      <label for="classification_name">Classification Name*</label>
      <input 
        type="text" 
        name="classification_name" 
        id="classification_name" 
        required
        pattern="^[a-zA-Z0-9]+$" 
        title="No spaces or special characters allowed"
        <% if (classification_name) { %> value="<%= classification_name %>" <% } %>
      >
      <button type="submit">Add Classification</button>
    </form>

  <!-- ValidaciÃ³n Cliente -->
  <script>
    document.getElementById('classificationForm').addEventListener('submit', function(e) {
      const input = document.getElementById('classification_name');
      if (!/^[a-zA-Z0-9]+$/.test(input.value)) {
        e.preventDefault();
        alert('Classification name cannot contain spaces or special characters.');
      }
    });
  </script>
